{
  if (parent.getChildPosition(view) == 0) {
    outRect.left=space;
    outRect.right=space;
    outRect.top=space;
    outRect.bottom=space / 2;
  }
 else   if (parent.getChildPosition(view) == parent.getLayoutManager().getItemCount() - 1) {
    outRect.left=space;
    outRect.right=space;
    outRect.top=space / 2;
    outRect.bottom=space;
  }
 else {
    outRect.left=space;
    outRect.right=space;
    outRect.top=space / 2;
    outRect.bottom=space / 2;
  }
}
