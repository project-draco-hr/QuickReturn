{
  super.onViewCreated(view,savedInstanceState);
switch (mQuickReturnViewType) {
case HEADER:
    mQuickReturnHeaderTextView.setVisibility(View.VISIBLE);
  mNotifyingScrollView.setOnScrollChangedListener(new SpeedyQuickReturnScrollViewOnScrollChangedListener(getActivity(),QuickReturnViewType.HEADER,mQuickReturnHeaderTextView,null));
break;
case FOOTER:
mQuickReturnFooterTextView.setVisibility(View.VISIBLE);
mNotifyingScrollView.setOnScrollChangedListener(new SpeedyQuickReturnScrollViewOnScrollChangedListener(getActivity(),QuickReturnViewType.FOOTER,null,mQuickReturnFooterTextView));
break;
case BOTH:
mQuickReturnHeaderTextView.setVisibility(View.VISIBLE);
mQuickReturnFooterTextView.setVisibility(View.VISIBLE);
mNotifyingScrollView.setOnScrollChangedListener(new SpeedyQuickReturnScrollViewOnScrollChangedListener(getActivity(),QuickReturnViewType.BOTH,mQuickReturnHeaderTextView,mQuickReturnFooterTextView));
break;
}
mNotifyingScrollView.setOverScrollEnabled(false);
}
