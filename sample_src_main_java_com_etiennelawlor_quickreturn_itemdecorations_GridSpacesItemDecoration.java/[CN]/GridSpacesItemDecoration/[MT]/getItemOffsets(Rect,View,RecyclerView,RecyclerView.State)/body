{
  int childPosition=parent.getChildAdapterPosition(view);
  if (childPosition == 0 || childPosition == 1) {
    outRect.top=mSpace;
  }
  if (childPosition % 2 == 0) {
    outRect.left=mSpace;
    outRect.right=mSpace / 2;
  }
 else {
    outRect.left=mSpace / 2;
    outRect.right=mSpace;
  }
  outRect.bottom=mSpace;
}
